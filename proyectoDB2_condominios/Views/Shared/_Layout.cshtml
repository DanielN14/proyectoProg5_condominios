<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Condominios CR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/proyectoDB2_condominios.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Condominios CR</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li id="Seguridad" hidden="hidden" class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Seguridad
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Seguridad" asp-action="Index">Visitas</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Seguridad" asp-action="Visitas_QR">Visitas QR</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Seguridad" asp-action="Vehiculos_Condominos">Vehiculos Residentes</a>
                                </li>
                            </ul>
                        </li>
                        <li id="Visitas" hidden="hidden" class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Visitas
                            </a>
                            <ul class="dropdown-menu">
                                <li >
                                    <a class="dropdown-item" asp-controller="Visitas" asp-action="Index">Visualizar visitas</a>
                                </li>
                                <li >
                                    <a class="dropdown-item" asp-controller="Visitas" asp-action="Agregar">Registrar visita</a>
                                </li>
                                 <li>
                                    <a class="dropdown-item" asp-controller="Visitas" asp-action="EasyPass">EasyPass</a>
                                </li>
                            </ul>
                        </li>
                        <li id="Usuarios" hidden="hidden" class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">Usuario
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Usuarios" asp-action="Index">Visualizar usuarios</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Usuarios" asp-action="Agregar">Registrar usuarios</a>
                                </li>
                            </ul>
                        </li>
                        <li id="Condominios" hidden="hidden" class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">Condominios
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Condominios" asp-action="Index">Visualizar condominios</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Condominios" asp-action="Agregar">Agregar condominios</a>
                                </li>
                            </ul>
                        </li>
                        <li id="Vehiculos" hidden="hidden" class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Vehiculos
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Vehiculos" asp-action="Index">Visualizar vehiculos</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Vehiculos" asp-action="Agregar">Agregar vehiculos</a>
                                </li>
                            </ul>
                        </li>
                        <li id="Sesion" hidden="hidden" class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Sesion
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Login" asp-action="Index">Cerrar sesion</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - proyectoDB2_condominios - <a asp-area="" asp-controller="Home"
                asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
