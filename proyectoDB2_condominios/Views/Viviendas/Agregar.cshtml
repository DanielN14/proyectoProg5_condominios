@{
    ViewData["Title"] = "Registro de Viviendas";
}

@await Html.PartialAsync("AccesoUsuarios")

<div class="container">
    <form class="form" asp-controller="Viviendas" asp-action="AgregarVivienda" enctype="multipart/form-data">
        <div style="border: 1px solid #d5d7dd; padding: 30px; border-radius: 15px;">
            <div class="row">
                <div class="col-lg-9 col-md-8 col-sm-12">
                    <div class="text-center">
                        <h4>Creación de Viviendas</h4>
                        <hr>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-12 col-sm-12">
                            <label for="numeroVivienda" class="form-label">Numero de Vivienda</label>
                            <input type="text" class="form-control form-control-sm mb-2" name="numeroVivienda" required />
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <label for="descripcion" class="form-label">Descripcion</label>
                            <input type="text" class="form-control form-control-sm mb-2" name="descripcion" required />
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <label for="numeroHabitaciones" class="form-label">Numero de Habitaciones</label>
                            <input type="text" class="form-control form-control-sm mb-2" name="numeroHabitaciones" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <label for="cochera" class="form-label">Cocheras</label>
                            <input type="text" class="form-control form-control-sm mb-2" name="cochera" required />
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                        <label for="selectCondominio" class="form-label">Condominio</label>
                            <select class="form-select form-select-sm mb-2" name="selectCondominio" required>
                            <option selected disabled value="">Seleccione un condominio</option>
                                @foreach (var item in ViewBag.condominios)
                                {
                                    <option value="@item.idProyectoHabitacional">@item.nombre</option>
                                }
                        </select>
                    </div>
                    </div>
                    <br>
                    <div class="form-group float-end">
                        <div class="col-12">
                            <button class="btn btn-white" type="reset">Limpiar</button>
                            <button class="btn btn-success" type="submit">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

